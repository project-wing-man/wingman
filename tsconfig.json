{
  "compilerOptions": {
    "jsx": "react",
    "module": "ES6",
    "noImplicitAny": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es6",
  },
  "include": ["src/**/*", "server/**/*"],
  "exclude": [
    "node_modules"
  ]
}